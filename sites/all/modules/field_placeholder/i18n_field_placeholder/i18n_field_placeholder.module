<?php

/**
 * @file
 * Field placeholder i18n integration.
 *
 * This module gives i18n integration for
 * Field placeholder module.
 */

/**
 * Implements hook_i18n_object_info_alter().
 */
function i18n_field_placeholder_i18n_object_info_alter(&$info) {
  $info['field_instance']['string translation']['properties']['placeholder'] = array(
    'title' => t('Placeholder'),
  );
}
